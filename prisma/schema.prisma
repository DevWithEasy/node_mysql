generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(uuid())
    name      String
    email     String    @unique
    phone     String    @unique
    password  String
    image     String?
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    contacts  Contact[]
}

model Contact {
    id         String    @id @default(uuid())
    phone      String
    name       String?
    email      String?
    image      String?
    company    String?
    job        String?
    dob        DateTime?
    note       String?
    region     String?
    street     String?
    city       String?
    postalCode String?
    website    String?
    author     User      @relation(fields: [authorId], references: [id])
    authorId   String
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
}
